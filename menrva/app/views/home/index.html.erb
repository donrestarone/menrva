<div class="container animated fadeInUp">
	<div class="alert alert-secondary alert-dismissible fade show" role="alert">
	  <strong>Give me some Copy Pasta</strong> See what I can come up with
	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	</div>
	<div class="form-group">
		<%= form_for :comparison, url: create_comparison_path, remote: true, id: 'newComparisonForm' do |f| %>
			<%= f.text_area :body, class:'form-control', rows: '10' %>
			<br>
			<%= f.submit "Analyze", id: 'createNewComparison', class: 'btn btn-outline-success'  %>
		<% end %>
	</div>
	<div id="comparison">
	</div>

</div>


<div class="container" style="display:none;">
	<p>paragraph</p>
	<div class="form-group">
		<%= form_for :paragraph, url: create_paragraph_path, remote: true do |f| %>
			<%= f.text_area :body, class:'form-control', rows: '10' %>
			<%= f.submit "Save" %>
		<% end %>
	</div>
	<div id="paragraph">
	</div>
</div>